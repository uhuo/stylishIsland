/* pages/my/my.wxss */

.container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.bg{
  width: 750rpx;
  height: 574rpx;
}

.about-container{
  width: 550rpx;
  padding: 0 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: absolute;
  top: 440rpx;
}

.about-us{
  display: inline-flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}

.about-us image{
  width: 34rpx;
  height: 34rpx;
}

.description{
  font-size: 24rpx;
  color: #999999;
}

.avatar-container{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-position{
  position: absolute;
  top: 255rpx;
}

.avatar{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  /* 没有overflow: hidden; 即使设置了border-radius: 50%; 图片也不会变成圆形 */
  overflow: hidden;
}

.book-num{
  font-size: 36rpx;
  color: #000000;
}

.like-container{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
  background-color: #f5f5f5;
}

.headline{
  width: 97rpx;
  height: 42rpx;
  margin-top: 30rpx;
}

.preview-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  flex-wrap: wrap;
  width: 690rpx;
  padding: 0 30rpx;
  margin-top: 30rpx;
}

.preview{
  margin-bottom: 30rpx;
}



.study{
  width: 88rpx;
  height: 88rpx;
  position: absolute;
  top: 40rpx;
  right: 45rpx;
}
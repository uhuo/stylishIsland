  flex-direction: column;
  align-items: center;
  width: 330rpx;
  background-color: #ffffff;
}

.head{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 80rpx;
}

.tag{
  width: 72rpx;
  height: 40rpx;
  margin-left: 20rpx;
  margin-top: -2rpx;
  font-size: 24rpx;
